<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y160">

    <ImageView
        android:id="@+id/img_friend_lottery_icon"
        android:layout_width="@dimen/x116"
        android:layout_height="@dimen/y96"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x30"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y24"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y24"
        android:layout_toRightOf="@+id/img_friend_lottery_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend_lottery_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxLength="20"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/y26" />

        <ProgressBar
            android:id="@+id/pb_friend_lottery_progress"
            style="@style/StyleProgressBarMini"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:layout_marginRight="@dimen/y30"
            android:layout_marginTop="@dimen/y10"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_friend_lottery_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lottery_item_text_color"
                android:textSize="@dimen/y24" />

            <TextView
                android:id="@+id/tv_friend_lottery_item_bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:textColor="@color/lottery_item_text_color"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/setting_division_line"/>

</RelativeLayout>

