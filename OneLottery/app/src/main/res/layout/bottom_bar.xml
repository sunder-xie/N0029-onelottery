<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_tab_bottom"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/y97"
    android:layout_alignParentBottom="true"
    android:background="@color/white">

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/divide_tabbar_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/divider_line"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_tab_bottom_activity"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_tab_bottom_activity"
                android:layout_width="@dimen/y42"
                android:layout_height="@dimen/y42"
                android:background="@drawable/tab_lottery_normal"/>

            <TextView
                android:id="@+id/tv_tab_bottom_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:text="@string/tab_bar_lottery"
                android:textColor="@color/tab_bar_text_color"
                android:textSize="@dimen/y23"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_bottom_recent"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_tab_bottom_recent"
                android:layout_width="@dimen/y42"
                android:layout_height="@dimen/y42"
                android:background="@drawable/tab_recent_normal"/>

            <TextView
                android:id="@+id/tv_tab_bottom_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:text="@string/tab_bar_recent"
                android:textColor="@color/tab_bar_text_color"
                android:textSize="@dimen/y23"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_bottom_friend"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_tab_bottom_friend"
                android:layout_width="@dimen/y42"
                android:layout_height="@dimen/y42"
                android:background="@drawable/tab_friend_normal"/>

            <TextView
                android:id="@+id/tv_tab_bottom_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:text="@string/tab_bar_friend"
                android:textColor="@color/tab_bar_text_color"
                android:textSize="@dimen/y23"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_bottom_me"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_tab_bottom_me"
                android:layout_width="@dimen/y42"
                android:layout_height="@dimen/y42"
                android:background="@drawable/tab_me_normal"/>

            <TextView
                android:id="@+id/tv_tab_bottom_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:text="@string/tab_bar_me"
                android:textColor="@color/tab_bar_text_color"
                android:textSize="@dimen/y23"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>