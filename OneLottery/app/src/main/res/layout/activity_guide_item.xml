<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_guide_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/iv_guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y350"
        android:text="区块链公私钥保障"
        android:textColor="@android:color/white"
        android:textSize="@dimen/y30"/>

    <TextView
        android:id="@+id/tv_guide_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y280"
        android:text="更安全"
        android:textColor="@android:color/white"
        android:textSize="@dimen/y50"/>

    <Button
        android:id="@+id/btn_go"
        android:layout_width="@dimen/y186"
        android:layout_height="@dimen/y50"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y184"
        android:background="@drawable/experience_now"
        android:text="@string/app_agree_now"
        android:textColor="@color/login_common_btn_color"
        android:textSize="@dimen/y24"/>


    <LinearLayout
        android:id="@+id/ly_protocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y40"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_agree"
            android:textColor="@android:color/white"
            android:textSize="@dimen/y22"/>

        <TextView
            android:id="@+id/tv_protocl_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_agreement"
            android:textColor="#6670f2"
            android:textSize="@dimen/y22"/>
    </LinearLayout>

</RelativeLayout>