<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_describe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_count_down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y153"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_count_down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x80"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/lottery_detail_count_down"
            android:gravity="center"
            android:text="@string/lottery_detail_start_countdown"
            android:textColor="@color/lottery_item_text_color"
            android:textSize="@dimen/y21"/>

        <TextView
            android:id="@+id/tv_count_down_line"
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x40"
            android:layout_marginLeft="@dimen/x258"
            android:layout_marginTop="@dimen/y40"
            android:background="@color/count_down_line_color"/>

        <TextView
            android:id="@+id/lottery_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x45"
            android:layout_toRightOf="@+id/tv_count_down_line"
            android:textColor="@color/app_primary_color"
            android:textSize="@dimen/y50"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_lottery_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        style="@style/marginleft_and_marginright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_lottery_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/x30"/>

        <TextView
            android:id="@+id/tv_lottery_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y32"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/y28"/>

        <TextView
            android:id="@+id/tv_lottery_rule_type"
            style="@style/wrap_wrap"
            android:layout_marginTop="@dimen/x30"
            android:text="@string/lottery_detail_rule_type"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/y28"/>

        <TextView
            android:id="@+id/tv_lottery_rule"
            style="@style/wrap_wrap"
            android:textSize="@dimen/y24"
            android:layout_marginTop="@dimen/y12"
            android:text="@string/lottery_detail_rule_percent"
            android:textColor="@color/lottery_detaile_text_color"/>

        <TextView
            android:id="@+id/btn_lottery_calculate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x51"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y19"
            android:background="@drawable/shape_lottery_rule_detail_btn"
            android:gravity="center"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text="@string/lottery_detail_calculation"
            android:textColor="@color/app_primary_color"
            android:textSize="@dimen/y24" />

    </LinearLayout>

    <TextView
        style="@style/create_lottery_division_line"
        android:layout_marginTop="@dimen/x30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/y30"
        android:orientation="vertical">

        <TextView
            style="@style/wrap_wrap"
            android:text="@string/lottery_detail_lottery_describtion"
            android:textColor="@color/common_text_color"/>

        <TextView
            android:textColor="@color/lottery_detaile_text_color"
            android:id="@+id/tv_lottery_descrition"
            android:textSize="@dimen/y24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"/>
    </LinearLayout>

    <TextView
        style="@style/create_lottery_division_line"
        android:layout_marginTop="@dimen/x30"/>
</LinearLayout>