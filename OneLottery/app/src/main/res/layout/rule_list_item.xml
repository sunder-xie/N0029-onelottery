<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rule_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_rule_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x34">

        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y18"
            android:background="@drawable/c"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_rule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:text="规则1"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/y28" />
    </LinearLayout>

    <include layout="@layout/create_lottery_divider_line" />

    <TextView
        android:id="@+id/tv_winner_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x34"
        android:layout_marginTop="@dimen/y30"
        android:text="@string/create_lottery_winner_percentage"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/y24" />

    <TextView
        android:id="@+id/tv_creator_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x34"
        android:layout_marginTop="@dimen/y20"
        android:text="@string/create_lottery_creator_percentage"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/y24" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/lottery_detaile_line_bg" />

</LinearLayout>