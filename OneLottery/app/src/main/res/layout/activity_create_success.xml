<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_create_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_create_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y76"/>

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y38"
        android:text="@string/create_lottery_success"
        android:textColor="@color/common_text_color"
        android:textSize="@dimen/y35"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y38"
        android:text="@string/create_lottery_success_notice"
        android:textColor="@color/lottery_item_text_color"
        android:textSize="@dimen/y27"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y76"
        android:background="@color/setting_division_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y265"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x197"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y37"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_enter_lotterty"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x140"
                android:background="@drawable/selector_create_lottery_enter_lottery_btn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_enter_lotterty"
                android:layout_marginTop="@dimen/y24"
                android:gravity="center"
                android:text="@string/create_lottery_enter_lottery"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/y27"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x197"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y37">

            <Button
                android:id="@+id/btn_change_lottery"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x140"
                android:background="@drawable/selector_create_lottery_rechange_btn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_change_lottery"
                android:layout_marginTop="@dimen/y24"
                android:gravity="center"
                android:text="@string/create_lottery_change_lottery"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/y27"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x197"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y37">

            <Button
                android:id="@+id/btn_bet"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x140"
                android:background="@drawable/selector_create_lottery_bet_btn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_bet"
                android:layout_marginTop="@dimen/y24"
                android:gravity="center"
                android:text="@string/create_lottery_bet"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/y27"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x197"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y37">

            <Button
                android:id="@+id/btn_share"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x140"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/selector_setting_share_btn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_share"
                android:layout_marginTop="@dimen/y24"
                android:gravity="center"
                android:text="@string/setting_share"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/y27"/>


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
