<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lottery_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize">

    <ImageButton
        android:id="@+id/lottery_search"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80"
        android:layout_gravity="left"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/lottery_search"/>

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/y38"/>

    <RelativeLayout
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x30">

        <ImageButton
            android:id="@+id/lottery_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/lottery_message"/>

        <ImageView
            android:id="@+id/img_msg_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/y18"
            android:background="@drawable/shape_message_white_point"/>
    </RelativeLayout>


</android.support.v7.widget.Toolbar>
