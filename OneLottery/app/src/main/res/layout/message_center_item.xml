<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/lottery_detaile_line_bg"
              android:paddingLeft="@dimen/x30"
              android:paddingRight="@dimen/x30"
              android:paddingTop="@dimen/y20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y146"
        android:background="@drawable/msg_center_item_bg"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <ImageView
            android:id="@+id/iv_msg_type"
            android:layout_width="@dimen/y72"
            android:layout_height="@dimen/y72"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/msg_success"/>

        <ImageView
            android:id="@+id/iv_is_read"
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y20"
            android:layout_alignRight="@+id/iv_msg_type"
            android:layout_alignTop="@+id/iv_msg_type"
            android:layout_marginTop="@dimen/y3"
            android:src="@drawable/shape_msg_is_read"/>

        <ImageView
            android:id="@+id/iv_msg_selected"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:src="@drawable/msg_select"/>

        <RelativeLayout
            android:id="@+id/ly_msg_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_msg_selected"
            android:layout_toRightOf="@+id/iv_msg_type"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/x20">

            <TextView
                android:id="@+id/tv_msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:text="转账成功"
                android:textColor="@color/register_btn_login_color"
                android:textSize="@dimen/y28"/>

            <TextView
                android:id="@+id/tv_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/y6"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="张三已成功给你转入100众享币sdfsdfsdfsdfsfdsdfsfdsdfsf"
                android:textColor="@color/lottery_detaile_text_color"
                android:textSize="@dimen/y24"/>

            <TextView
                android:id="@+id/tv_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2016/11/25 17:55"
                android:textColor="@color/lottery_detaile_text_color"
                android:textSize="@dimen/y22"/>
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>