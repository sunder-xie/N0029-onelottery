<?xml version="1.0" encoding="utf-8"?>
<com.peersafe.chainbet.widget.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y98"
    android:clickable="true"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/swipe_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/setting_right_item_icon"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y18"
                android:background="@drawable/c"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/setting_right_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x14"
                android:text="wnagfen"
                android:textColor="@color/white"
                android:textSize="@dimen/y28"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/user_list"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/setting_right_enter"
                android:layout_width="@dimen/x70"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/setting_right_enter"/>

            <ImageButton
                android:id="@+id/setting_right_delete"
                android:layout_width="@dimen/x70"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/setting_right_delete"/>

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/user_list"/>
    </RelativeLayout>
</com.peersafe.chainbet.widget.SwipeMenuView>

