<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y38">

            <TextView
                style="@style/setting_withdraw_detail_text"
                android:layout_centerVertical="true"
                android:text="@string/withdraw_bill_status"/>

            <TextView
                android:id="@+id/tv_bill_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已打款"
                android:textColor="@color/lottery_prize_text_color"
                android:textSize="@dimen/y32"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y38"
            android:layout_marginTop="@dimen/y24">

            <TextView
                style="@style/setting_withdraw_detail_text"
                android:text="@string/withdraw_time"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2016/12/23 16:41:44"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/y26"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y38">

            <TextView
                android:id="@+id/text"
                style="@style/setting_withdraw_detail_text"
                android:text="@string/withdraw_count"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_toRightOf="@+id/text"
                android:ellipsize="end"
                android:gravity="right"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/common_text_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y28">

            <TextView
                android:id="@+id/text1"
                style="@style/setting_withdraw_detail_text"
                android:text="@string/withdraw_bank_belong"/>

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_toRightOf="@+id/text1"
                android:ellipsize="end"
                android:gravity="right"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/common_text_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y28">

            <TextView
                android:id="@+id/text2"
                style="@style/setting_withdraw_detail_text"
                android:text="@string/withdraw_card_number"/>

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_toRightOf="@+id/text2"
                android:ellipsize="end"
                android:gravity="right"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/common_text_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y28">

            <TextView
                android:id="@+id/text3"
                style="@style/setting_withdraw_detail_text"
                android:text="@string/withdraw_card_name"/>

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_toRightOf="@+id/text3"
                android:ellipsize="end"
                android:gravity="right"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/common_text_color"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y38"
            android:layout_marginTop="@dimen/y28">

            <TextView
                android:id="@+id/text4"
                style="@style/setting_withdraw_detail_text"
                android:text="@string/withdraw_bill_number"/>

            <TextView
                android:id="@+id/tv_bill_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:layout_toRightOf="@+id/text4"
                android:ellipsize="end"
                android:gravity="right"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/common_text_color"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/selector_register_btn"
        android:text="@string/withdraw_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/y38"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_appeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:text="@string/withdraw_appeal"
        android:textColor="@color/lottery_prize_text_color"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:paddingBottom="@dimen/y20"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40"
        android:paddingTop="@dimen/y20">

        <TextView
            android:id="@+id/tv_reason_text"
            style="@style/setting_withdraw_detail_text"
            android:text="@string/withdraw_reason"/>

        <TextView
            android:id="@+id/tv_reason"
            style="@style/setting_withdraw_detail_text"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x80"
            android:text="用户名不对撒费所发"/>
    </RelativeLayout>
</LinearLayout>
